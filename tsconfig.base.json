{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "sourceRoot": "./src",
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "target": "es5",
    "strictNullChecks": true,
    "module": "esnext",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2017",
      "scripthost"
    ],
    "rootDir": ".",
    "declaration": false,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "ts-pring": [
        "src/container"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
