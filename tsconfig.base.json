{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "target": "es5",
    "strictNullChecks": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "lib": [
      "es5",
      "es6",
      "es2017",
      "scripthost"
    ],
    "rootDir": ".",
    "declaration": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/factories/list"
  ]
}
