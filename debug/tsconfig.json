{
  "ts-node": {
    "compiler": "ttypescript",
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es5",
      "es6",
      "es2017",
      "scripthost"
    ],
    "plugins": [
      { "transform": "../src/v2/CustomTransformer.ts" }
    ]
  }
}
