{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist",
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "declaration": true,
    "target": "es5",
    "module": "CommonJS",
    "strict": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es5",
      "es6",
      "es2017",
      "ESNext",
      "scripthost"
    ],
    "plugins": [
      {
        "transform": "dependency-injection-cat/transformers/typescript",
      }
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/external/built-context"
  ]
}
